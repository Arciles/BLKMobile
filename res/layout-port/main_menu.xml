            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton01"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn1"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton02"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn2"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton03"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn3"
                    android:paddingLeft="0dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecondRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton04"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn4"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton05"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn5"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton06"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn6"
                    android:paddingLeft="0dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llThirdRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton07"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn7"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton08"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn8"
                    android:paddingLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton09"
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:background="@drawable/btn9"
                    android:paddingLeft="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>