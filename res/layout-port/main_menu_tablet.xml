<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/loHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="128dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@drawable/back_320_480" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="582dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BalÄ±kesir Belediyesi"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="45sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="fill_parent"
                android:layout_height="84dp"
                android:layout_weight="3.57"
                android:background="@drawable/btn11" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loNewsAndMayor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="50dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/ibBaskanTablet"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
   <ImageButton
                android:id="@+id/ibHaberlerTablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />
      <ImageButton
                android:id="@+id/ibHaberlerTablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical"
        android:paddingTop="35dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
			<ImageButton
                android:id="@+id/ibKurumsalTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn1" />
                
            </LinearLayout>

            
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">
			
			<ImageButton
                android:id="@+id/ibHTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn2" />
            </LinearLayout>

                       
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout> 

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
			<ImageButton
                android:id="@+id/ibDuyurularTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn3" />
            </LinearLayout>


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">
			<ImageButton
                android:id="@+id/ibBalikesirTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn4" />
            </LinearLayout>

                        
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">
			<ImageButton
                android:id="@+id/ibBelediyeTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn5" />
            </LinearLayout>

                        
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
			<ImageButton
                android:id="@+id/ibEtkinliklerTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn6" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
			<ImageButton
                android:id="@+id/ibRehberTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn7" />
			
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">
			<ImageButton
                android:id="@+id/ibHizmetlerTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn8" />
            </LinearLayout>

                        
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1">
			<ImageButton
                android:id="@+id/ibFotograflarTablet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn9" />
            </LinearLayout>
        </LinearLayout>


,
        
    </LinearLayout>

</LinearLayout>